double trade_window(const int start_time,const int end_time)
  {
//---
   int result=0; // not in trade window.
//--- check position
   if(TimeLocal()>=start_time&&TimeLocal()<=end_time)
    result=1;

   if(TimeLocal()>end_time)
    result=2;
   
   return(result);
  }

